<%= form_with(model: @tweeet, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @tweeet.errors.any? %>
    <div id="error_explanation">
      <h1><%= @tweeet.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @tweeet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tweeet_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="field">
    <%= form.label :image %>
    <%= image_tag(@tweeet.image.url) if @tweeet.image.url %>
    <%= form.file_field :image, id: :tweeet_image %>
  </div>
  <%= form.submit %>
<% end %>

            </section>
        </article>
    </div>